# custom keybinds

keybind = cmd+shift+l=new_split:right
keybind = cmd+shift+h=new_split:left
keybind = cmd+shift+j=new_split:down
keybind = cmd+shift+k=new_split:up

keybind = cmd+l=goto_split:right
keybind = cmd+h=goto_split:left
keybind = cmd+j=goto_split:down
keybind = cmd+k=goto_split:up

keybind = cmd+shift+up=resize_split:up,10
keybind = cmd+shift+down=resize_split:down,10
keybind = cmd+shift+left=resize_split:left,10
keybind = cmd+shift+right=resize_split:right,10


keybind = global:cmd+g=toggle_quick_terminal
keybind = cmd+r=reload_config
keybind = cmd+o=open_config

# generic styling 

font-size = 16
theme = tokyonight_night
unfocused-split-opacity = 0.8

# specific customizations

## no need to type the shortcut for copying highlighted text
copy-on-select = clipboard

## makes lualine look nicer
window-padding-x = 0
window-padding-y = 0
window-padding-color = extend-always
window-padding-balance = true
## allow multiline for claude code
keybind = shift+enter=text:\n
